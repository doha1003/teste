# Environment variables for doha.kr
# Copy this file to .env.local for local development

# Node environment (development, staging, production)
NODE_ENV=development

# Gemini API Key for fortune-telling features
GEMINI_API_KEY=your_gemini_api_key_here

# Vercel environment (automatically set by Vercel)
# VERCEL_ENV=development|preview|production
# VERCEL_URL=your-deployment-url.vercel.app

# Additional allowed origins for CORS (comma-separated)
# These will be added to the default allowed origins
# ADDITIONAL_ALLOWED_ORIGINS=https://custom-domain.com,https://another-domain.com

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=10   # Maximum requests per window

# API timeout settings
API_TIMEOUT_MS=10000  # 10 seconds

# Feature flags
ENABLE_DETAILED_ERRORS=false  # Show detailed error messages (only for development)
ENABLE_API_LOGGING=true       # Log API requests for debugging