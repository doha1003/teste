    <script>

        document.querySelectorAll('.faq-question').forEach(question => {
            question.addEventListener('click', () => {
                const faqItem = question.parentElement;
                faqItem.classList.toggle('active');

                document.querySelectorAll('.faq-item').forEach(item => {
                    if (item !== faqItem) {
                        item.classList.remove('active');
                    }
                });
            });
        });

        function validateInput(input, type) {
            if (!input || typeof input !== 'string') return false;
            
            switch(type) {
                case 'name':
                    return input.length >= 2 && input.length <= 50 && /^[가-힣a-zA-Z\s]+$/.test(input);
                case 'email':
                    return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(input) && input.length <= 100;
                case 'subject':
                    return input.length >= 5 && input.length <= 100;
                case 'message':
                    return input.length >= 10 && input.length <= 2000;
                default:
                    return false;
            }
        }
        
        function sanitizeInput(input) {
            if (!input) return '';

            const sanitized = DOMPurify.sanitize(input, {ALLOWED_TAGS: [], ALLOWED_ATTR: []});

            return sanitized.replace(/[<>\"'&]/g, '');
        }
        
        function showError(message) {
            const errorDiv = document.createElement('div');
            errorDiv.className = 'error-message';
            errorDiv.style.cssText = 'color: #e74c3c; background: #fadbd8; padding: 10px; border-radius: 5px; margin: 10px 0; text-align: center;';
            errorDiv.textContent = message;
            
            const form = document.getElementById('contactForm');
            const existingError = form.querySelector('.error-message');
            if (existingError) existingError.remove();
            
            form.insertBefore(errorDiv, form.firstChild);
            setTimeout(() => errorDiv.remove(), 5000);
        }

        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            try {

                const rawData = {
                    name: document.getElementById('name').value.trim(),
                    email: document.getElementById('email').value.trim(),
                    subject: document.getElementById('subject').value.trim(),
                    message: document.getElementById('message').value.trim()
                };

                if (!validateInput(rawData.name, 'name')) {
                    showError('이름은 2-50자의 한글/영문만 입력 가능합니다.');
                    return;
                }
                
                if (!validateInput(rawData.email, 'email')) {
                    showError('올바른 이메일 주소를 입력해주세요.');
                    return;
                }
                
                if (!validateInput(rawData.subject, 'subject')) {
                    showError('제목은 5-100자로 입력해주세요.');
                    return;
                }
                
                if (!validateInput(rawData.message, 'message')) {
                    showError('문의 내용은 10-2000자로 입력해주세요.');
                    return;
                }

                const formData = {
                    name: sanitizeInput(rawData.name),
                    email: sanitizeInput(rawData.email),
                    subject: sanitizeInput(rawData.subject),
                    message: sanitizeInput(rawData.message)
                };

                const encodedSubject = encodeURIComponent(`[doha.kr 문의] ${formData.subject}`);
                const encodedBody = encodeURIComponent(`이름: ${formData.name}\n이메일: ${formData.email}\n\n문의 내용:\n${formData.message}`);
                
                const mailtoLink = `mailto:youtubdoha@gmail.com?subject=${encodedSubject}&body=${encodedBody}`;

                if (mailtoLink.length > 2000) {
                    showError('문의 내용이 너무 깁니다. 조금 더 간단하게 작성해주세요.');
                    return;
                }

                window.location.href = mailtoLink;

                this.reset();

                const successDiv = document.createElement('div');
                successDiv.className = 'success-message';
                successDiv.style.cssText = 'color: #27ae60; background: #d5f4e6; padding: 10px; border-radius: 5px; margin: 10px 0; text-align: center;';
                successDiv.textContent = '이메일 클라이언트가 열립니다. 전송 버튼을 눌러 문의를 완료해주세요.';
                
                this.insertBefore(successDiv, this.firstChild);
                setTimeout(() => successDiv.remove(), 5000);
                
            } catch (error) {
                console.error('Form submission error:', error);
                showError('문의 전송 중 오류가 발생했습니다. 다시 시도해주세요.');
            }
        });

        function addInputValidation() {
            const inputs = [
                {id: 'name', type: 'name', message: '이름은 2-50자의 한글/영문만 입력 가능합니다.'},
                {id: 'email', type: 'email', message: '올바른 이메일 주소를 입력해주세요.'},
                {id: 'subject', type: 'subject', message: '제목은 5-100자로 입력해주세요.'},
                {id: 'message', type: 'message', message: '문의 내용은 10-2000자로 입력해주세요.'}
            ];
            
            inputs.forEach(({id, type, message}) => {
                const input = document.getElementById(id);
                if (!input) return;
                
                input.addEventListener('blur', function() {
                    const value = this.value.trim();
                    const isValid = validateInput(value, type);

                    const existingError = this.parentElement.querySelector('.field-error');
                    if (existingError) existingError.remove();

                    if (value && !isValid) {
                        this.style.borderColor = '#e74c3c';

                        const errorSpan = document.createElement('span');
                        errorSpan.className = 'field-error';
                        errorSpan.style.cssText = 'color: #e74c3c; font-size: 0.875rem; margin-top: 0.25rem; display: block;';
                        errorSpan.textContent = message;
                        this.parentElement.appendChild(errorSpan);
                    } else {
                        this.style.borderColor = value ? '#27ae60' : '#e2e8f0';
                    }
                });
                
                input.addEventListener('input', function() {

                    if (type === 'message') {
                        const counter = this.parentElement.querySelector('.char-counter') || 
                                      document.createElement('span');
                        counter.className = 'char-counter';
                        counter.style.cssText = 'font-size: 0.75rem; color: #666; float: right; margin-top: 0.25rem;';
                        counter.textContent = `${this.value.length}/2000`;
                        
                        if (!this.parentElement.querySelector('.char-counter')) {
                            this.parentElement.appendChild(counter);
                        }
                    }
                });
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            addInputValidation();
        });
    </script>

    <!-- Non-critical scripts moved here for performance -->

