{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/tests/mbti/",
        "http://localhost:3000/tests/love-dna/",
        "http://localhost:3000/tests/teto-egen/",
        "http://localhost:3000/fortune/daily/",
        "http://localhost:3000/fortune/saju/",
        "http://localhost:3000/fortune/tarot/",
        "http://localhost:3000/tools/bmi-calculator.html",
        "http://localhost:3000/tools/salary-calculator.html",
        "http://localhost:3000/tools/text-counter.html"
      ],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "chromeFlags": [
          "--headless",
          "--no-sandbox", 
          "--disable-gpu",
          "--disable-dev-shm-usage"
        ],
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1,
          "requestLatencyMs": 0,
          "downloadThroughputKbps": 0,
          "uploadThroughputKbps": 0
        },
        "emulatedFormFactor": "desktop",
        "locale": "ko-KR"
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.95}],
        "categories:accessibility": ["error", {"minScore": 0.95}],
        "categories:best-practices": ["error", {"minScore": 0.90}],
        "categories:seo": ["error", {"minScore": 1.0}],
        "categories:pwa": ["warn", {"minScore": 0.85}],
        
        "first-contentful-paint": ["error", {"maxNumericValue": 1800}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 2500}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}],
        "total-blocking-time": ["error", {"maxNumericValue": 300}],
        "speed-index": ["error", {"maxNumericValue": 3400}],
        "interactive": ["error", {"maxNumericValue": 3800}],
        
        "uses-optimized-images": "warn",
        "uses-webp-images": "warn",
        "uses-text-compression": "warn",
        "unused-css-rules": "warn",
        "unused-javascript": "warn",
        "uses-rel-preconnect": "warn",
        "uses-rel-preload": "warn",
        
        "color-contrast": "error",
        "image-alt": "error",
        "heading-order": "error",
        "link-name": "error",
        "button-name": "error",
        "aria-allowed-attr": "error",
        "aria-required-attr": "error",
        "aria-roles": "error",
        "aria-valid-attr": "error",
        "aria-valid-attr-value": "error",
        "duplicate-id-aria": "error",
        "duplicate-id-active": "error",
        "focus-traps": "error",
        "focusable-controls": "error",
        "interactive-element-affordance": "error",
        "logical-tab-order": "error",
        "managed-focus": "error",
        "offscreen-content-hidden": "error",
        "use-landmarks": "error",
        "valid-lang": "error",
        "video-caption": "error",
        
        "is-on-https": "error",
        "uses-http2": "warn",
        "no-vulnerable-libraries": "error",
        "csp-xss": "warn",
        "image-aspect-ratio": "warn",
        "image-size-responsive": "warn",
        "js-libraries": "warn",
        "password-inputs-can-be-pasted-into": "error",
        
        "canonical": "error",
        "document-title": "error",
        "hreflang": "warn",
        "http-status-code": "error",
        "is-crawlable": "error",
        "link-text": "error",
        "meta-description": "error",
        "robots-txt": "warn",
        "structured-data": "warn",
        "tap-targets": "error",
        "viewport": "error",
        
        "installable-manifest": "warn",
        "splash-screen": "warn",
        "themed-omnibox": "warn",
        "content-width": "warn",
        "apple-touch-icon": "warn",
        "maskable-icon": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "server": {
      "command": "npm run serve",
      "port": 3000,
      "timeout": 30000
    }
  }
}